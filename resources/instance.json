{
    "name"    : "g10 example",
    "version" : 
    {
        "major" : 0,
        "minor" : 0,
        "patch" : 1
    },
    "window" :
    {
        "width"  : 1280,
        "height" : 720,
        "title"  : "g10 example"
    },
    "input" :
    {
        "name"              : "default input",
        "mouse sensitivity" : 1.0,
        "binds"             :
        {
            "FORWARD"      : [ "W" ],
            "BACKWARD"     : [ "S" ],
            "STRAFE LEFT"  : [ "A" ],
            "STRAFE RIGHT" : [ "D" ],
            "CAMERA UP"    : [ "UP" ],
            "CAMERA DOWN"  : [ "DOWN" ],
            "CAMERA LEFT"  : [ "LEFT" ],
            "CAMERA RIGHT" : [ "RIGHT" ],
            "CROUCH"       : [ "C" ],
            "PRONE"        : [ "LEFT SHIFT" ],
            "MOUSE LOCK"   : [ "M" ],
            "JUMP"         : [ "SPACE" ],
            "QUIT"         : [ "ESCAPE" ]
        }
    },
    "schedule" :
    {
        "name"        : "default schedule",
        "repeat"      : true,
        "main thread" : "render",
        "threads"     :
        {
            "main" : 
            [
                { "task" : "pre ai" },
                { "task" : "ai" },
                { "task" : "user code" }
            ],
            "render" : 
            [
                { "task" : "input" },
                { "task" : "render" }
            ],
            "shell" : [ { "task" : "shell" } ],
            "network shell" : [ { "task" : "network shell" } ]
        }
    },
    "initial scene" :
    {
        "name"     : "default scene",
        "entities" :
        {
            "floor" : 
            {
                "transform" :
                {
                    "location" : [ 0.0, 0.0, 0.0 ],
                    "rotation" : [ 0.0, 0.0, 0.0 ],
                    "scale"    : [ 1.0, 1.0, 1.0 ]
                },
                "mesh" :
                {
                    "plane" : 
                    {
                        "primative" : "plane",
                        "shader"    : "holdout",
                        "transform" : 
                        {
                            "location" : [ 0.0, 0.0, -1.0 ],
                            "rotation" : [ 0.0, 0.0, 0.0 ],
                            "scale"    : [ 0.5, 0.5, 0.01 ]
                        }
                    }
                }
            }
        },
        "cameras" :
        {
            "camera" :
            {
                "fov" : 30.5,
                "location" : [ 0.0, 22.0, 8.0 ],
                "orientation" : [ 0.0, 0.0, 1.0 ],
                "clip" :
                {
                    "near" : 0.1,
                    "far"  : 1000.0
                }
            }
        },
        "lights" : [ ]
    },
    "renderer" : 
    {
        "name"        : "Solid color geometry",
        "clear color" : [ 1.0, 1.0, 1.0, 1.0 ],
        "attachments" :
        {
            "color" :
            {
                "description" : "< R, G, B >",
                "format"      : "r8g8b8a8"
            }
        },
        "nodes" :
        {
            "geometry" :
            {
                "out" : [ "color" ],
                "data" :
                {
                    "type" : "render pass",
                    "description" : "Render holdout and color",
                    "in" : { "camera" : [ { "view" : "mat4" }, { "projection" : "mat4" } ] },
                    "nodes" : 
                    {
                        "holdout" : 
                        {
                            "data" :
                            {
                                "type"     : "shader",  
                                "vertex"   : "resources/shaders/holdout/vert.spv",
                                "fragment" : "resources/shaders/holdout/frag.spv",
                                "nodes" :
                                {
                                    "input assembler" : { "out" : [ "xyz" ] },
                                    "camera" : { "out" : [ "view", "projection" ] },
                                    "transform" : { "out" : [ "model" ] },
                                    "geometry" :
                                    {
                                        "in"  : [ "xyz", "view", "projection", "model" ],
                                        "out" : [ "color" ]
                                    },
                                    "color" : { "in"  : [ "color" ] }
                                },
                                "connections" : 
                                [
                                    [ "input assembler:xyz"     , "geometry:xyz" ],
                                    [ "camera:view"             , "geometry:view" ],
                                    [ "camera:projection"       , "geometry:projection" ],
                                    [ "transform:model"         , "geometry:model" ],
                                    [ "geometry:color"          , "color:color" ]
                                ]
                            }
                        }
                    },
                    "connections" : [ ]
                }
            },
            "framebuffer" : { "in" : [ "color" ] }
        },
        "connections" : [ [ "geometry:color", "framebuffer:color" ] ]
    },
    "debug" : 4,
    "debug " :
    {
        "log limit"   : 4,
        "shell limit" : 3
    }
}
