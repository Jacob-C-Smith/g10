{
    "name"    : "g10 example",
    "version" : 
    {
        "major" : 0,
        "minor" : 0,
        "patch" : 1
    },
    "window" :
    {
        "width"  : 800,
        "height" : 600,
        "title"  : "G10 Example"
    },
    "input" :
    {
        "name"              : "default input",
        "mouse sensitivity" : 1.0,
        "binds"             :
        {
            "FORWARD"      : [ "W" ],
            "BACKWARD"     : [ "S" ],
            "STRAFE LEFT"  : [ "A" ],
            "STRAFE RIGHT" : [ "D" ],
            "CROUCH"       : [ "C" ],
            "PRONE"        : [ "LEFT CONTROL" ],
            "JUMP"         : [ "SPACE" ],
            "QUIT"         : [ "ESCAPE" ]
        }
    },
    "schedule" :
    {
        "name"    : "default schedule",
        "repeat"  : true,
        "threads" :
        {
            "main" : 
            [
                { "task" : "sdl2 poll" },
                { "task" : "pre ai" },
                { "task" : "ai" },
                { "task" : "user code" },
                { "task" : "render" }
            ]
        }
    },
    "initial scene" :
    {
        "name"     : "default scene",
        "entities" :
        {
            "floor" : 
            {
                "shader"    : "holdout",
                "transform" :
                {
                    "location" : [ 0.0, 0.0, 0.0 ],
                    "rotation" : [ 0.0, 0.0, 0.0 ],
                    "scale"    : [ 1.0, 1.0, 1.0 ]
                },
                "mesh" :
                {
                    "plane" : 
                    {
                        "primative" : "plane",
                        "shader"    : "holdout",
                        "transform" : 
                        {
                            "location" : [ 0.0, 0.0, 0.0 ],
                            "rotation" : [ 0.0, 0.0, 0.0 ],
                            "scale"    : [ 5.0, 5.0, 5.0 ]
                        }
                    }
                }
            },
            "ball" : 
            {
                "shader"    : "solid color",
                "transform" :
                {
                    "location" : [ 0.0, 0.0, 3.0 ],
                    "rotation" : [ 0.0, 0.0, 0.0 ],
                    "scale"    : [ 1.0, 1.0, 1.0 ]
                },
                "mesh" :
                {
                    "plane" : 
                    {
                        "primative" : "sphere",
                        "shader"    : "solid color",
                        "transform" : 
                        {
                            "location" : [ 0.0, 0.0, 3.0 ],
                            "rotation" : [ 0.0, 0.0, 0.0 ],
                            "scale"    : [ 1.0, 1.0, 1.0 ]
                        }
                    }
                }
            }
        },
        "cameras" :
        {
            "camera" :
            {
                "$schema" : "https://schema.g10.app/camera.json",
                "fov" : 60.0,
                "location" : [ -2.0, 0.0, 3.0 ],
                "orientation" : [ 0.1, 0.1, 0.2 ],
                "clip" :
                {
                    "near" : 0.1,
                    "far"  : 1000.0
                }
            }
        },
        "lights" : [ ]
    },
    "renderer" : 
    {
        "name"        : "Solid color geometry",
        "clear color" : [ 1.0, 1.0, 1.0, 1.0 ],
        "attachments" :
        {
            "color" :
            {
                "description" : "< R, G, B >",
                "format"      : "r8g8b8a8"
            }
        },
        "passes" :
        {
            "geometry" :
            {
                "description" : "Render geometry with solid color",
                "in"          : { "camera" : [ { "view" : "mat4" }, { "projection" : "mat4" } ] },
                "shaders"     : 
                {
                    "solid color" : 
                    {
                        "vertex"   : "resources/shaders/solid color/vert.glsl",
                        "fragment" : "resources/shaders/solid color/frag.glsl",
                        "culling"  : [ "visible" ],
                        "layout"   : [ { "xyz" : "vec3" }, { "uv" : "vec2" } ],
                        "in"       : { "transform" : [ { "model" : "mat4" } ] }
                    },
                    "holdout" : 
                    {
                        "vertex"   : "resources/shaders/holdout/vert.glsl",
                        "fragment" : "resources/shaders/holdout/frag.glsl",
                        "culling"  : [ "visible" ],
                        "layout"   : [ { "xyz" : "vec3" } ],
                        "in"       : { "transform" : [ { "model" : "mat4" } ] }
                    }
                }
            }
        }
    },
    "debug" : 4
}
