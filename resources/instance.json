{
    "name"    : "g10 example",
    "version" : 
    {
        "major" : 0,
        "minor" : 0,
        "patch" : 1
    },
    "debug" : 4,
    "window" :
    {
        "width"  : 800,
        "height" : 600,
        "title"  : "G10 Example"
    },
    "input" :
    {
        "name"              : "default input",
        "mouse sensitivity" : 1.0,
        "binds"             :
        {
            "FORWARD"      : [ "W" ],
            "BACKWARD"     : [ "S" ],
            "STRAFE LEFT"  : [ "A" ],
            "STRAFE RIGHT" : [ "D" ],
            "CROUCH"       : [ "C" ],
            "PRONE"        : [ "LEFT CONTROL" ],
            "JUMP"         : [ "SPACE" ],
            "QUIT"         : [ "ESCAPE" ]
        }
    },
    "schedule" :
    {
        "name"    : "default schedule",
        "repeat"  : true,
        "threads" :
        {
            "main" : 
            [
                { "task" : "sdl2 poll" },
                { "task" : "pre ai" },
                { "task" : "ai" },
                { "task" : "user code" },
                { "task" : "render" }
            ]
        }
    },
    "initial scene" :
    {
        "$schema"  : "https://schema.g10.app/scene.json",
        "name"     : "default scene",
        "entities" :
        [
            {
                "$schema"   : "https://schema.g10.app/entity.json",
                "name"      : "entity 1",
                "shader"    : "solid color",
                "mesh"      :
                {
                    "plane" : 
                    {
                        "primative" : "plane",
                        "shader"    : "solid color",
                        "transform" : 
                        {
                            "$schema"  : "https://schema.g10.app/transform.json",
                            "location" : [ 0.0, 0.0, 1.0 ],
                            "rotation" : [ 0.0, 0.0, 0.0 ],
                            "scale"    : [ 1.0, 1.0, 1.0 ]
                        }
                    }
                },
                "transform" :
                {
                    "$schema"  : "https://schema.g10.app/transform.json",
                    "location" : [ 0.0, 0.0, 0.0 ],
                    "rotation" : [ 0.0, 0.0, 0.0 ],
                    "scale"    : [ 1.0, 1.0, 1.0 ]
                }
            }
        ],
        "cameras" :
        {
            "camera" :
            {
                "$schema" : "https://schema.g10.app/camera.json",
                "fov" : 60.0,
                "location" : [ 0.0, 0.0, 0.0 ],
                "orientation" : [ 0.0, 0.0, 0.0 ],
                "clip" :
                {
                    "near" : 0.1,
                    "far"  : 1000.0
                }
            }
        },
        "lights" : [ ]
    },
    "renderer" : 
    {
        "name"        : "Solid color geometry",
        "clear color" : [ 0.5, 0.5, 1.0, 1.0 ],
        "culling"     : [ "visible" ],
        "attachments" :
        {
            "color" :
            {
                "description" : "< R, G, B >",
                "format"      : "r8g8b8a8"
            }
        },
        "passes" :
        {
            "geometry" :
            {
                "description" : "Render geometry with solid color",
                "shaders" : 
                {
                    "solid color" : 
                    {
                        "vertex"   : "resources/shaders/solid_color/vert.glsl",
                        "fragment" : "resources/shaders/solid_color/frag.glsl"
                    }
                }
            }
        }
    }
}
